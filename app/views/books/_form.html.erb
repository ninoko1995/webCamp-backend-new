<div class='new-book'>
  <%= form_for(book) do |f| %>
    <div class="field row">
      <%= f.label :title %>

      <%= f.text_field :title,class: 'col-xs-12' %>
    </div>

    <div class="field row">
      <%= f.label :opinion %>
      <%= f.text_area :body ,class: 'col-xs-12'%>
    </div>

    <div>
      <% book.book_types.preload(:type).each do |book_type| %>
          <button class='interest-btn  btn btn-default btn-sm'>
          <%= book_type.type.category %>
          <%= link_to book_type_path(book_type),method: :delete,remote: true  do %>
            <span class='glyphicon glyphicon-remove-circle remove-interest'></span>
          <% end %>
          </button>
      <% end %>
    </div>

    <div class='field row'>
      <%= f.label :book_type %>
      <%= collection_select(:book_type,:type_id, Type.all, :id, :category, include_blank: true) %>
    </div> 

    <div class='field row'>
      <%= f.label :author %>
      <%= f.text_field :author,class: 'col-xs-12' %>
    </div>       

    <div class='field row'>
      <%= f.label :valuation %><br>
      <% 5.times do |i| %>
        <span class="glyphicon glyphicon-star-empty star" %></span>
      <% end %>
    </div>       

    <div class="actions row">
      <%= f.hidden_field :draft,value: false %>
      <%= f.submit class: 'btn btn-primary col-xs-12'%>
    </div>


  <% end %>
</div>