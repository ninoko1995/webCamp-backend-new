
    <%= paginate books %>
    <table class='table table-hover'>
      <thead>
        <tr> 
          <th></th>
          <th>本の題名</th>
          <th>感想</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% books.each do |book| %>
          <tr>
            <td><%= link_to(book.user) do %>
              <%= image_tag profile_url_thumb(book.user) %>
              <% end %>
            </td>
            <td><%= link_to book.title,book %></td>
            <td><%= book.body %></td>


            <% if Favorite.find_by(user_id: current_user.id,book_id: book.id).nil? %>
                <td><%= link_to "", book_favorites_path(book),method: :post ,class: 'glyphicon glyphicon-heart-empty'%><%= book.favorites.count %>いいね!</td>
            <% else %>
                <td><%= link_to "", book_favorites_path(book), method: :delete,class: 'glyphicon glyphicon-heart' %><%= book.favorites.count %>いいね!</td>
            <% end %>
            <% if correct_user?(book.user) %>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に消しますか？' } ,class: 'btn-sm btn-danger'%></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate books %>