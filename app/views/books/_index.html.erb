
    <table class='table table-hover table-inverse'>
      <thead>
        <tr> 
          <th></th>
          <th>Title</th>
          <th>Opinion</th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% books.each do |book| %>
          <tr>
            <td><%= link_to(book.user) do %>
              <%= image_tag profile_url_thumb(book.user) %>
              <% end %>
            </td>
            <td><%= link_to book.title,book %></td>
            <td><%= book.body %></td>

            <% if Favorite.find_by(user_id: current_user.id,book_id: book.id).nil? %>
                <td><%= link_to "", book_favorites_path(book),method: :post ,class: 'glyphicon glyphicon-heart-empty'%><%= book.favorites.count %>いいね!</td>
            <% else %>
                <td><%= link_to "", book_favorites_path(book), method: :delete,class: 'glyphicon glyphicon-heart',style: 'color:orange;' %><%= book.favorites.count %>いいね!</td>
            <% end %>
            <td><span class='glyphicon glyphicon-comment'><%= book.comments.count %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate books %>
