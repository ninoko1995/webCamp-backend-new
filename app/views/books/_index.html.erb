    <table class='table table-hover table-inverse'>
      <thead>
        <tr> 
          <th></th>
          <th>本の題名</th>
          <th>感想</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% books.each do |book| %>
          <tr>
            <td><%= link_to(book.user) do %>
              <%= image_tag profile_url_thumb(book.user) %>
              <% end %>
            </td>
            <td><%= link_to book.title,book %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>