

    <table class='table'>
      <thead>
        <tr> 
          <th>本の題名</th>
          <th>感想</th>
          <th>投稿者</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= book.user.name %></td>


            <% if Favorite.find_by(user_id: current_user.id,book_id: book.id).nil? %>
                <td><%= link_to "#{book.favorites.count}いいね!", book_favorites_path(book),method: :post ,class: 'glyphicon glyphicon-heart-empty'%></td>
            <% else %>
                <td><%= link_to "#{book.favorites.count}いいね!", book_favorites_path(book), method: :delete,class: 'glyphicon glyphicon-heart' %></td>
            <% end %>
          
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Show', book %></td>
            <% if correct_user?(book.user) %>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に消しますか？' } ,class: 'btn-sm btn-danger'%></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>