<div class='row'>  
  <div class='col-xs-3'>
    <h2>User info</h2>
    <%= render 'users/info', user: current_user ,now: ''%>

    <h2>New book</h2>
    <%= render 'form', book: Book.new %>

  </div>
  

  <div class='col-xs-9'>
		<h2>Book detail</h2>
		<table class='table'>
		  <tr>
        <td><%= link_to(@book.user) do %>
          <%= image_tag profile_url_thumb(@book.user) %><br>
          <%= @book.user.name %>
          <% end %>
        </td>
        <td><%= link_to @book.title,@book %></td>
        <td><%= @book.body %></td>

        <td>
          <% if Favorite.find_by(user_id: current_user.id,book_id: @book.id).nil? %>
            <%= link_to "", book_favorites_path(@book),method: :post ,class: 'glyphicon glyphicon-heart-empty'%>
          <% else %>
            <%= link_to "", book_favorites_path(@book), method: :delete,class: 'glyphicon glyphicon-heart' %>
          <% end %>
          <%= @book.favorites.count %><%= link_to 'いいね!',favors_book_path(@book) %>
        </td>
        <% if correct_user?(@book.user) %>
          <td><%= link_to 'Edit', edit_book_path(@book) %></td>
          <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' } ,class: 'btn-sm btn-danger'%></td>
        <% end %>
      </tr>
    </table>

    <h3>favors</h3>
    <%= render 'users/index',users: @favors %>

  </div>
</div>