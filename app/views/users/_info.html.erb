    <table class='table'>
      <tr><td><%= image_tag profile_url(user) %></td></tr> 
      <tr><td>ユーザー名 : <%= user.name %></td></tr>
      <tr><td>自己紹介</td></tr>
    	<tr><td> <%= user.introduction %></td></tr>
    </table>

    <div class='row'>
      <%= link_to 'お気に入り',user_favorites_path(user),class: 'btn btn-primary col-lg-12' %>

      <% if correct_user?(user) %>
        <%= link_to '編集',edit_user_path(user),class: 'btn btn-default col-lg-4' %>
      <% else %>
        <% if user.followed_by?(current_user) %>
          <%= link_to 'フォロー中',user_relationships_path(user),method: :delete,class: 'btn btn-primary col-lg-4' %>
        <% else %>
          <%= link_to 'フォローする',user_relationships_path(user),method: :post,class: 'btn btn-default col-lg-4' %>
        <% end %>
      <% end  %>

      
      <%= link_to "#{user.followings.count}フォロー",follows_user_path(user),class: 'btn btn-default col-lg-4' %>
      <%= link_to "#{user.followers.count}フォロワー",followers_user_path(user),class: 'btn btn-default col-lg-4' %>
    </div>